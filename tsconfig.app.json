{
  "compilerOptions": {
    /* ğŸ“Œ Base do projeto */
    "baseUrl": ".",
    "erasableSyntaxOnly": true,
    /* ğŸ”• Silencia aviso de depreciaÃ§Ã£o do baseUrl (TS 6.x) */
    "ignoreDeprecations": "6.0",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    /* ğŸ”— Aliases */
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@modules/*": ["src/modules/*"],
      "@services/*": ["src/services/*"],
      "@shared/*": ["src/shared/*"],
      "@hooks/*": ["src/hooks/*"],
      "@types/*": ["src/@types/*"]
    },
    /* ğŸ§¼ Qualidade */
    "skipLibCheck": true,
    /* ğŸ§  TypeScript strict e seguro */
    "strict": true,
    /* âš™ï¸ ConfiguraÃ§Ã£o moderna (Vite / ESM) */
    "target": "ES2022",
    /* ğŸ“¦ Cache */
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    /* ğŸ§¾ Tipagens */
    "types": ["vite/client"],
    "useDefineForClassFields": true,
    "verbatimModuleSyntax": true
  },
  "include": ["src"]
}
